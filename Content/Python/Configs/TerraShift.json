{
  "environment": {
    "name": "TerraShift",
    "id": "3",
    "params": {
      "PlatformSize": 1,
      "MaxColumnHeight": 4,
      "ObjectSize": [0.1, 0.1, 0.1],
      "ObjectMass": 0.1,
      "GridSize": 50,
      "MaxSteps": 1024,
      "NumGoals": 4,
      "SpawnDelay": 0.25,
      "MaxAgents": 5,
      "GoalThreshold": 1.75,
      "MultiAgentFractalWave": {
        "num_agents": 5,
        "image_size": 50,
        "octaves": 3,
    
        "wrap_pitch": true,
        "wrap_yaw": true,
        "wrap_roll": true,
        "wrap_freq": true,
        "wrap_lacunarity": true,
        "wrap_gain": true,
        "wrap_blend_weight": true,
    
        "agent_init": {
          "pitch_range": [-1.57, 1.57],
          "yaw_range": [0, 6.28318],
          "roll_range": [0, 6.28318],
          "fov_deg": 60,
          "sample_dist": 10
        },
    
        "fractal_init": {
          "base_freq_range": [0.01, 2.0],
          "lacunarity_range": [1, 2],
          "gain_range": [0, 1],
          "blend_weight_range": [0, 5]
        },
    
        "action_ranges": {
          "pitch_minmax": [-0.39, 0.39],
          "yaw_minmax":   [-0.39, 0.39],
          "roll_minmax":  [-0.39, 0.39],
          "base_freq_minmax":    [-0.02, 0.02],
          "lacunarity_minmax":   [-0.02, 0.02],
          "gain_minmax":         [-0.15, 0.15],
          "blend_weight_minmax": [-0.15, 0.15]
        },
    
        "state_ranges": {
          "pitch_range": [-1.57, 1.57],
          "yaw_range":   [0, 6.28318],
          "roll_range":  [0, 6.28318],
          "base_freq_range":  [0.01, 2],
          "lacunarity_range": [1, 2],
          "gain_range":       [0, 1],
          "blend_weight_range": [0, 5]
        }
      }
    },

    "shape": {
      "state": {
        "central": {
          "obs_size": 2500
        },
        "agent": {
          "obs_size": 26,
          "min": 5,
          "max": 5
        }
      },
      "action": {
        "agent": {
          "continuous": [
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 }
          ]
        }
      }
    }
  },

  "agent": {
    "type": "MA_POCA",
    "params": {
      "learning_rate": 0.00005,
      "gamma": 0.97,
      "lambda": 0.95,
      "value_loss_coeff": 0.5,
      "baseline_loss_coeff": 0.25,
      "normalize_advantages": true,
      "rewards_normalizer_disabled" : {
        "warmup_steps": 1000, 
        "epsilon": 1e-4
      },
      "clipped_value_loss": false,
      "max_grad_norm": 1.0,
      "ppo_clip_range": 0.1,
      "value_clip_range": 0.2,
      "entropy_coeff": 0.01,
      "schedulers": {
        "lr": {
          "start_factor": 1,
          "end_factor": 0.001,
          "total_iters": 100000
        },
        "lr_cos_disabled": {
          "max_lr": 0.0001, 
          "total_steps": 100000, 
          "anneal_strategy": "cos", 
          "pct_start": 0.1, 
          "div_factor": 10,
          "final_div_factor": 100
        },
        "entropy_coeff_cos_disabled": {
          "max_value": 0.01,
          "total_steps": 30000,
          "pct_start": 0.3,
          "div_factor": 10,
          "final_div_factor": 100
        },
        "entropy_coeff_linear_disabled": {
          "start_value": 0.01,
          "end_value": 0.001,
          "total_iters": 10000
        }
      },
      "networks": {
        "MultiAgentEmbeddingNetwork": {
          "cross_attention_feature_extractor": {
            "obs_size": 26,
            "num_agents": 5,
            "h": 50,
            "w": 50,
            "embed_dim": 128,
            "num_heads": 8,
            "cnn_channels": [32, 64, 128],
            "cnn_kernel_sizes": [5, 3, 3],
            "cnn_strides": [2, 2, 2],
            "group_norms": [16, 8, 4],
            "block_scales": [12, 6, 3],
            "transformer_layers": 2,
            "dropout_rate": 0.0,
            "use_agent_id": true,
            "ff_hidden_factor": 4,
            "id_num_freqs": 8,
            "conv_init_scale": 0.1,
            "linear_init_scale": 0.1 
          },
          "obs_encoder": {
            "state_dim": 128,
            "hidden_size": 128,
            "output_size": 128,
            "dropout_rate": 0,
            "activation": true,
            "layer_norm": true,
            "linear_init_scale" : 0.1
          },
          "obs_actions_encoder": {
            "state_dim": 128,
            "action_dim": 7,
            "hidden_size": 128,
            "output_size": 128,
            "dropout_rate": 0,
            "activation": true,
            "layer_norm": true,
            "linear_init_scale" : 0.1
          }
        },
        "policy_network": {
          "in_features": 128,
          "hidden_size": 128,
          "log_std_min": -4.0,
          "log_std_max": 2.0,
          "mean_scale" : 1.0,
          "entropy_method": "mc",
          "n_entropy_samples": 10,
          "num_agents": 5,
          "linear_init_scale": 0.1
        },
        "critic_network": {
          "value_head": {
            "in_features": 128,
            "hidden_size": 128,
            "dropout_rate": 0
          },
          "baseline_head": {
            "in_features": 128,
            "hidden_size": 128,
            "dropout_rate": 0
          },
          "baseline_attention": {
            "embed_dim" : 128,
            "num_heads" : 8,
            "dropout": 0.0,
            "self_attention" : true
          },
          "linear_init_scale" : 0.1
        }
      }
    }
  },

  "train": {
    "states_normalizer": {
      "warmup_steps" : 1000
    },
    "num_environments": 8,
    "epochs": 6,
    "mini_batch_size": 16,
    "buffer_size": 128,
    "batch_size": 128,
    "AgentsResetFrequency": 0,
    "ActionRepeat": 1,
    "saveFrequency": 20
  }
}
