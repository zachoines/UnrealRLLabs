{
  "environment": {
    "name": "TerraShift",
    "id": "3",
    "params": {
      "PlatformSize": 1.0,
      "MaxColumnHeight": 5.0,
      "ObjectSize": [0.10, 0.10, 0.10],
      "ObjectMass": 1.0,
      "GridSize": 50,
      "MaxSteps": 1024,
      "NumGoals": 4,
      "SpawnDelay": 0.5,
      "MaxAgents": 5,
      "GoalThreshold": 0.2,
      "MatrixDeltaRange": [-1.0, -1.0]
    },
    "shape": {
      "state": {
        "central": {
          "obs_size": 2500
        },
        "agent": {
          "obs_size": 29,
          "min": 10,
          "max": 10
        }
      },
      "action": {
        "agent": {
          "discrete": [
            { "num_choices": 5 },
            { "num_choices": 3 }
          ]
        }
      }
    }
  },
  "agent": {
    "type": "MA_POCA",
    "params": {
      "learning_rate": 0.0003,
      "gamma": 0.99,
      "lambda": 0.95,
      "normalize_rewards": false,
      "normalize_advantages": true,
      "value_loss_coeff": 1.0,
      "baseline_loss_coeff": 1.0,
      "max_grad_norm": 1.0,
      "ppo_clip_range": 0.2,
      "entropy_coeff": 0.01,
      "schedulers": {
        "lr": {
          "start_factor": 1.0,
          "end_factor": 0.01,
          "total_iters": 50000
        }
      },
      "networks": {
        "policy_network": {
          "in_features": 256,
          "hidden_size": 256
        },
        "critic_network": {
          "value_head": {
            "in_features": 256,
            "hidden_size": 256,
            "dropout_rate": 0.0
          },
          "baseline_head": {
            "in_features": 256,
            "hidden_size": 256,
            "dropout_rate": 0.0
          }
        },
        "MultiAgentEmbeddingNetwork": {
          "general_obs_encoder": {
            "encoders": [
              {
                "key": "central",
                "network": "SpatialNetwork2D",
                "params": {
                  "h": 50,
                  "w": 50,
                  "in_channels": 1,
                  "base_channels": 16,
                  "num_blocks": 4,
                  "out_features": 128
                }
              },
              {
                "key": "agent",
                "network": "LinearNetwork",
                "params": {
                  "in_features": 29,
                  "out_features": 128,
                  "dropout_rate": 0.0,
                  "activation": true
                }
              }
            ],
            "aggregator_output_size": 256,
            "agent_id_enc": {
              "num_freqs": 32,
              "id_embed_dim": 128
            }
          },
          "RSA": {
            "embed_size": 256,
            "heads": 4,
            "dropout_rate": 0.0
          },
          "agent_obs_encoder": {
            "state_dim": 256,
            "output_size": 256,
            "dropout_rate": 0.0,
            "activation": true
          },
          "obs_actions_encoder": {
            "state_dim": 256,
            "action_dim": 2,
            "output_size": 256,
            "dropout_rate": 0.0,
            "activation": true
          }
        }
      }
    }
  },
  "train": {
    "normalize_states": false,
    "num_environments": 64,
    "epochs": 3,
    "mini_batch_size": 16,
    "buffer_size": 160,
    "batch_size": 160,
    "AgentsResetFrequency": 0,
    "ActionRepeat": 0,
    "saveFrequency": 20
  }
}
