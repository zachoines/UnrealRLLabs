{
  "environment": {
    "name": "TerraShift_Lightweight_StagnationFixAttempt",
    "id": "Lightweight_FixAttempt_$(date +%Y%m%d_%H%M%S)",
    "params": {
      "PlatformSize": 1,
      "MaxColumnHeight": 4,
      "ObjectSize": [0.1, 0.1, 0.1],
      "ObjectMass": 0.1,
      "GridSize": 25,
      "MaxSteps": 512,
      "MaxAgents": 16,
      "TerraShiftEnvironment": {
        "bUseVelAlignment": true,
        "bUseXYDistanceImprovement": false,
        "bUseZAccelerationPenalty": false,
        "bUseAlignedDistanceShaping": false,
        "bUsePotentialShaping": false,
        "VelAlign_Scale": 0.001,
        "VelAlign_Min": -100.0,
        "VelAlign_Max": 100.0,
        "DistImprove_Scale": 1.0,
        "DistImprove_Min": -1.0,
        "DistImprove_Max": 1.0,
        "ZAccel_Scale": 0.0,
        "ZAccel_Min": 0.1,
        "ZAccel_Max": 2000.0,
        "PotentialShaping_Gamma": 0.95,
        "PotentialShaping_Scale": 0.10,
        "REACH_GOAL_REWARD": 1.0,
        "FALL_OFF_PENALTY": -1.0,
        "STEP_PENALTY": 0.0
      },
      "GoalManager": {
        "DefaultRadius": 1.0
      },
      "MultiAgentGaussianWaveHeightMap": {
        "NumAgents": 16,
        "GridSize": 25,
        "MinHeight": -4.0,
        "MaxHeight": 4.0,
        "NumActions": 6,
        "bUseActionDelta": true,
        "bAccumulatedWave": false,
        "AccumulatedWaveFadeGamma": 0.95,
        "VelMinMax": [-10.0, 10.0],
        "AngVelRange": [-3.14, 3.14],
        "AmpMinMax": [-2.5, 2.5],
        "SigMinMax": [1.0, 5.0],
        "DeltaVelScale": 2.0,
        "DeltaAngVelScale": 0.628,
        "DeltaAmpScale": 0.5,
        "DeltaSigmaScale": 1.0
      },
      "StateManager": {
        "MaxGridObjects": 1,
        "MarginXY": 1.5,
        "MinZ": -4.0,
        "MaxZ": 20.0,
        "ObjectScale": 0.1,
        "ObjectMass": 0.1,
        "MaxColumnHeight": 4.0,
        "BaseRespawnDelay": 0.0,
        "OverheadCameraDistance": 100.0,
        "OverheadCameraFOV": 60.0,
        "OverheadCameraResX": 25,
        "OverheadCameraResY": 25,
        "bUseRandomGoals": true,
        "bRemoveGridObjectOnGoalReached": true,
        "bRemoveGridObjectOnOOB": true,
        "bRespawnGridObjectOnGoalReached": false,
        "GoalRadius": 4,
        "ObjectRadius": 6,
        "GoalCollectRadius": 14,
        "GoalColors": [
          [1.0, 0.0, 0.0]
        ],
        "GridObjectColors": [
          [1.0, 0.0, 0.0]
        ]
      }
    },
    "shape": {
      "state": {
        "central": {
          "obs_size": 1250
        },
        "agent": {
          "obs_size": 9,
          "min": 16,
          "max": 16
        }
      },
      "action": {
        "agent": {
          "continuous": [
            {"min": -1, "max": 1}, {"min": -1, "max": 1}, {"min": -1, "max": 1},
            {"min": -1, "max": 1}, {"min": -1, "max": 1}, {"min": -1, "max": 1}
          ]
        }
      }
    }
  },
  "StateRecorder_disabled": {
    "height_map": {
      "grid_h": 25,
      "grid_w": 25,
      "num_channels": 2,
      "height_channel_index": 0,
      "clip_value": 1.0
    },
    "video": {
      "fps": 18,
      "output_path": "height_auto.mp4"
    },
    "auto_save_every": 128
  },
  "agent": {
    "type": "MA_POCA",
    "params": {
      "enable_memory": true,
      "memory_type": "gru",
      "gru": {
        "input_size": 128,
        "hidden_size": 128,
        "num_layers": 1,
        "bias": true,
        "dropout": 0.0
      },
      "enable_rnd": true,
      "rnd_params": {
        "output_size": 64,
        "hidden_size": 128,
        "intrinsic_reward_coeff": 0.01,
        "rnd_update_proportion": 0.25
      },
      "no_grad_forward_batch_size": 16,
      "learning_rate": 0.00003,
      "gamma": 0.95,
      "lambda": 0.95,
      "value_loss_coeff": 0.5,
      "baseline_loss_coeff": 0.25,
      "normalize_advantages": true,
      "clipped_value_loss": true,
      "max_grad_norm": 1.0,
      "ppo_clip_range": 0.2,
      "value_clip_range": 0.2,
      "entropy_coeff": 0.02,
      "rewards_normalizer_disabled": {
        "warmup_steps": 10000
      },
      "schedulers": {
        "lr": {
          "start_factor": 1.0,
          "end_factor": 0.01,
          "total_iters": 50000
        },
        "entropy_coeff": {
          "start_value": 0.02,
          "end_value": 0.001,
          "total_iters": 50000
        }
      },
      "networks": {
        "MultiAgentEmbeddingNetwork": {
          "cross_attention_feature_extractor": {
            "agent_obs_size": 9,
            "num_agents": 16,
            "in_channels": 2,
            "h": 25,
            "w": 25,
            "embed_dim": 128,
            "num_heads": 8,
            "cnn_channels": [64],
            "cnn_kernel_sizes": [5],
            "cnn_strides": [2],
            "group_norms": [8],
            "block_scales": [8],
            "transformer_layers": 2,
            "dropout_rate": 0.1,
            "use_agent_id": true,
            "ff_hidden_factor": 2,
            "id_num_freqs": 16,
            "conv_init_scale": 0.1,
            "linear_init_scale": 0.1
          },
          "obs_encoder": {
            "state_dim": 128,
            "hidden_size": 128,
            "output_size": 128,
            "dropout_rate": 0.1,
            "activation": true,
            "layer_norm": true,
            "linear_init_scale": 0.01
          },
          "obs_actions_encoder": {
            "state_dim": 128,
            "action_dim": 6,
            "hidden_size": 128,
            "output_size": 128,
            "dropout_rate": 0.1,
            "activation": true,
            "layer_norm": true,
            "linear_init_scale": 0.01
          }
        },
        "policy_network": {
          "in_features": 128,
          "hidden_size": 128,
          "param_init_bias": 0.0,
          "min_concentration": 1.001,
          "linear_init_scale": 0.01,
          "dropout_rate": 0.1
        },
        "critic_network": {
          "value_head": {
            "in_features": 128,
            "hidden_size": 128,
            "dropout_rate": 0.1
          },
          "baseline_head": {
            "in_features": 128,
            "hidden_size": 128,
            "dropout_rate": 0.1
          },
          "baseline_attention": {
            "embed_dim": 128,
            "num_heads": 8,
            "dropout": 0.1,
            "self_attention": true
          },
          "value_attention": {
            "embed_dim": 128,
            "num_heads": 8,
            "dropout": 0.1,
            "self_attention": true
          },
          "linear_init_scale": 0.01
        }
      }
    }
  },
  "train": {
    "sequence_length": 64,
    "pad_trajectories": true,
    "batch_size": 256,
    "buffer_size": 256,
    "num_environments": 4,
    "epochs": 6,
    "mini_batch_size": 16,
    "ActionRepeat": 1,
    "saveFrequency": 100
  }
}
