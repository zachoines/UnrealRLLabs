{
  "environment": {
    "name": "TerraShift",
    "id": "3",
    "params": {
      "PlatformSize": 1,
      "MaxColumnHeight": 4,
      "ObjectSize": [0.1, 0.1, 0.1],
      "ObjectMass": 0.1,
      "GridSize": 50,
      "MaxSteps": 1024,
      "NumGoals": 4,
      "SpawnDelay": 0.25,
      "MaxAgents": 5,
      "GoalThreshold": 1.75,
      "MultiAgentFractalWave": {
        "num_agents": 5,
        "image_size": 50,
        "octaves": 1,
        "random_init": true,

        "wrap_freq": false,
        "wrap_lacunarity": false,
        "wrap_gain": false,
        "wrap_blend_weight": false,
        "wrap_sampledist": false,
        "wrap_fov": false,

        "fractal_init": {
          "base_freq_range":      [0.01, 4],
          "blend_weight_range":   [0, 2],
          "sample_dist_range":    [0.1, 10],
          "fov_range":            [20, 120],

          "lacunarity_range":     [1.0, 2.0],
          "gain_range":           [0, 1]
        },

        "action_ranges": {
          "pitch_minmax":       [-0.31, 0.31],
          "yaw_minmax":         [-0.31, 0.31],
          "roll_minmax":        [-0.31, 0.31],
          "base_freq_minmax":   [-0.4, 0.5],
          "blend_weight_minmax":[-0.2, 0.2],
          "sampledist_minmax":  [-1, 1],
          "fov_minmax":         [-10, 10],

          "lacunarity_minmax":  [-0.1, 0.1],
          "gain_minmax":        [-0.15, 0.15]
        }
      }
    },

    "shape": {
      "state": {
        "central": {
          "obs_size": 2500
        },
        "agent": {
          "obs_size": 27,
          "min": 5,
          "max": 5
        }
      },
      "action": {
        "agent": {
          "continuous": [
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 },
            { "min": -1, "max": 1 }
          ]
        }
      }
    }
  },

  "agent": {
    "type": "MA_POCA",
    "params": {
      "learning_rate": 0.00002,
      "gamma": 0.99,
      "lambda": 0.95,
      "value_loss_coeff": 0.5,
      "baseline_loss_coeff": 0.25,
      "normalize_advantages": false,
      "clipped_value_loss": true,
      "max_grad_norm": 0.5,
      "ppo_clip_range": 0.1,
      "value_clip_range": 0.2,
      "entropy_coeff": 0.005,
      "rewards_normalizer_disabled" : {
        "warmup_steps": 1000
      },
      "schedulers": {
        "lr": {
          "start_factor": 1,
          "end_factor": 0.01,
          "total_iters": 1000000
        },
        "entropy_coeff": {
          "start_value": 0.001,
          "end_value": 0.0001,
          "total_iters": 1000000
        },
        "lr_cos_disabled": {
          "max_lr": 0.0001, 
          "total_steps": 100000, 
          "anneal_strategy": "cos", 
          "pct_start": 0.1, 
          "div_factor": 10,
          "final_div_factor": 100
        },
        "entropy_coeff_cos_disabled": {
          "max_value": 0.01,
          "total_steps": 30000,
          "pct_start": 0.3,
          "div_factor": 10,
          "final_div_factor": 100
        }
      },
      "networks": {
        "MultiAgentEmbeddingNetwork": {
          "cross_attention_feature_extractor": {
            "obs_size": 27,
            "num_agents": 5,
            "h": 50,
            "w": 50,
            "embed_dim": 64,
            "num_heads": 8,
            "cnn_channels": [32, 64, 128],
            "cnn_kernel_sizes": [5, 3, 3],
            "cnn_strides": [2, 2, 2],
            "group_norms": [16, 8, 4],
            "block_scales": [12, 6, 3],
            "transformer_layers": 2,
            "dropout_rate": 0.0,
            "use_agent_id": true,
            "ff_hidden_factor": 4,
            "id_num_freqs": 8,
            "conv_init_scale": 0.1,
            "linear_init_scale": 0.1 
          },
          "obs_encoder": {
            "state_dim": 64,
            "hidden_size": 64,
            "output_size": 64,
            "dropout_rate": 0,
            "activation": true,
            "layer_norm": true,
            "linear_init_scale" : 0.1
          },
          "obs_actions_encoder": {
            "state_dim": 64,
            "action_dim": 7,
            "hidden_size": 64,
            "output_size": 64,
            "dropout_rate": 0,
            "activation": true,
            "layer_norm": true,
            "linear_init_scale" : 0.1
          }
        },
        "policy_network": {
          "in_features": 64,
          "hidden_size": 64,
          "log_std_min": -8.0,
          "log_std_max": 2.0,
          "mean_scale" : 1.0,
          "entropy_method": "mc",
          "n_entropy_samples": 10,
          "num_agents": 5,
          "linear_init_scale": 0.1
        },
        "critic_network": {
          "value_head": {
            "in_features": 64,
            "hidden_size": 64,
            "dropout_rate": 0
          },
          "baseline_head": {
            "in_features": 64,
            "hidden_size": 64,
            "dropout_rate": 0
          },
          "baseline_attention": {
            "embed_dim" : 64,
            "num_heads" : 8,
            "dropout": 0.0,
            "self_attention" : true
          },
          "linear_init_scale" : 0.1
        }
      }
    }
  },

  "train": {
    "states_normalizer": {
      "warmup_steps" : 10000
    },
    "num_environments": 16,
    "epochs": 8,
    "mini_batch_size": 64,
    "buffer_size": 512,
    "batch_size": 512,
    "AgentsResetFrequency": 0,
    "ActionRepeat": 1,
    "saveFrequency": 20
  }
}
